# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Google Sheets Configuration
# ============================================
# Spreadsheet ID from URL: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id-here

# Option 1: JSON credentials as string (recommended for Docker)
GOOGLE_CREDENTIALS_JSON={"type": "service_account", ...}

# Option 2: Path to credentials file (for local development)
# GOOGLE_CREDENTIALS_FILE=/path/to/credentials.json

# ============================================
# Voximplant Configuration
# ============================================
# Enable Voximplant integration (set to true for production calls)
USE_VOXIMPLANT=false

# Voximplant account settings (required if USE_VOXIMPLANT=true)
VOXIMPLANT_ACCOUNT_ID=1234567
VOXIMPLANT_API_KEY=your-voximplant-api-key-here
VOXIMPLANT_APPLICATION_ID=987654
VOXIMPLANT_RULE_ID=123
VOXIMPLANT_CALLER_ID=+74951234567

# Backend URL for webhooks (must be publicly accessible)
# Example: https://api.yourdomain.com or https://yourdomain.com/api
BACKEND_URL=https://your-domain.com

# ============================================
# API Security
# ============================================
# Generate a strong random key for API authentication
# Example: openssl rand -hex 32
API_AUTH_KEY=your-secret-api-key-here

# ============================================
# Application Configuration
# ============================================
# Maximum call duration in seconds
MAX_CALL_DURATION_SEC=120

# Maximum number of dialog turns per call
MAX_DIALOG_TURNS=12

# OpenAI GPT model (gpt-4o, gpt-4o-mini, gpt-4-turbo)
GPT_MODEL=gpt-4o

# OpenAI TTS voice (alloy, echo, fable, onyx, nova, shimmer)
TTS_VOICE=alloy

# Server configuration
HOST=0.0.0.0
PORT=8000

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Development/Testing
# ============================================
# Use mock Google Sheets (for testing without real sheets)
USE_MOCK_SHEETS=false

# Legacy telephony configuration (deprecated)
# TELEPHONY_API_KEY=your-telephony-api-key-here
# TELEPHONY_CONFIG={"provider": "voximplant", ...}
